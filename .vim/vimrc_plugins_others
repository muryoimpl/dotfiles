"------------------------------------------------------------
"jslint.vim
let $JS_CMD='node'
function! s:javascript_filetype_settings()
  autocmd BufLeave     <buffer> call jslint#clear()
  autocmd BufWritePost <buffer> call jslint#check()
  autocmd CursorMoved  <buffer> call jslint#message()
endfunction
autocmd FileType javascript call s:javascript_filetype_settings()

augroup taskpaper
  autocmd!
  autocmd BufWinEnter,BufNewFile *.taskpaper set filetype=taskpaper
augroup END

"coffee-script
let coffee_make_options = '--bare'
let coffee_compiler = '$HOME/.nodebrew/current/bin/coffee'
let coffee_lint_options = '-f lint.json'
let coffee_linter = '$HOME/.nodebrew/current/bin/coffeelint'

"2タブの設定
autocmd BufNewFile, BufReadPost *.coffee setl shiftwidth=2 expandtab
"保存と同時にコンパイル
autocmd BufWritePost *.coffee silent CoffeeMake! -cb | cwindow |redraw!
"coffee->jsの内容を確認
nnoremap <Leader>w :CoffeeCompile watch vert<CR>

