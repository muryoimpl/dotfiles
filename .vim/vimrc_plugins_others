"vimfiler as default
let g:vimfiler_as_default_explorer = 1
nnoremap <silent> ,vf :<C-u>VimFiler<CR>
nnoremap <silent> vv :<C-u>VimFiler -buffer-name=explorer -split -simple -winwidth=35 -toggle -no-quit<CR>

