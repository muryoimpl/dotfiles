" status line
Plug 'itchyny/lightline.vim'

" git
Plug 'tpope/vim-fugitive'
Plug 'tpope/vim-git'
Plug 'airblade/vim-gitgutter'

" html, css
Plug 'othree/html5.vim'
Plug 'cakebaker/scss-syntax.vim', { 'for': ['scss', 'sass'] }
