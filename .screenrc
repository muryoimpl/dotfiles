# hardstatus
#hardstatus alwayslastline "%{= Gk} %-Lw%40L>%{b kg} %n %t %{-}%+Lw%-040=%{b km} %l %{.b} %Y/%m/%d %C:%s %A "
hardstatus alwayslastline "%?%h%:%t (screen #%n on %H)%?       %l %-050=%Y/%m/%d %C:%s %A  %-024=GNU Screen of Git master%:%="


# caption
#caption always "%{ Rk} %?%F%{b kr}%? %?%h%:%t (screen #%n)%? %{-}"
caption always "%{=r dd}%-Lw%40L>%?%F%{=b dR}%:[%? %n%f %t %?%F%{-}%:]%?%+Lw " 

# encoding
defutf8 on
defencoding utf8
defkanji utf8
encoding utf8 utf8


# message
msgwait 3
msgminwait 2

#sorendition
sorendition "+r .W"

defscrollback 4000

startup_message off
autodetach on
term xterm-256color

#ウインドウのサイズ変更
bind r eval 'echo "Resize window"' 'command -c resize'
bind -c resize ^] command
bind -c resize j eval 'resize +1' 'command -c resize'
bind -c resize k eval 'resize -1' 'command -c resize'

shell /usr/local/bin/zsh
shelltitle '% |zsh'
#スクロール
termcapinfo xterm* ti@:te@

altscreen on
