{
  "cleanupPeriodDays": 30,
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "BASH_DEFAULT_TIMEOUT_MS": "600000",
    "BASH_MAX_TIMEOUT_MS": "600000",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true",
    "SHELL": "/bin/zsh"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Edit(**)",
      "Glob(**)",
      "Grep(**)",
      "Read(**)",
      "TodoWrite(**)",
      "WebFetch(domain:*)",
      "Write(**)",
      "Bash(docker-compose:*)",
      "Bash(bundle exec:*)",
      "Bash(cat:*)"
    ],
    "deny": [
      "Bash(> /dev/sda*)",
      "Bash(apt-get install:*)",
      "Bash(brew install:*)",
      "Bash(bundle install:*)",
      "Bash(bundle config:*)",
      "Bash(chmod -R 777:*)",
      "Bash(chmod 777:*)",
      "Bash(chown -R:*)",
      "Bash(dd:*)",
      "Bash(format:*)",
      "Bash(gem install:*)",
      "Bash(gh api --method DELETE:*)",
      "Bash(gh auth logout:*)",
      "Bash(gh auth refresh:*)",
      "Bash(gh gist create:*)",
      "Bash(gh gist delete:*)",
      "Bash(gh gpg-key add:*)",
      "Bash(gh gpg-key delete:*)",
      "Bash(gh release create:*)",
      "Bash(gh release delete:*)",
      "Bash(gh release upload:*)",
      "Bash(gh repo archive:*)",
      "Bash(gh repo clone:*)",
      "Bash(gh repo create:*)",
      "Bash(gh repo delete:*)",
      "Bash(gh repo deploy-key:*)",
      "Bash(gh repo edit:*)",
      "Bash(gh repo fork:*)",
      "Bash(gh repo rename:*)",
      "Bash(gh repo sync:*)",
      "Bash(gh repo unarchive:*)",
      "Bash(gh secret delete:*)",
      "Bash(gh secret set:*)",
      "Bash(gh ssh-key add:*)",
      "Bash(gh ssh-key delete:*)",
      "Bash(gh workflow disable:*)",
      "Bash(gh workflow enable:*)",
      "Bash(gh workflow run:*)",
      "Bash(git checkout:*)",
      "Bash(git config:*)",
      "Bash(git rebase:*)",
      "Bash(git reset --hard:*)",
      "Bash(git restore:*)",
      "Bash(mkfs:*)",
      "Bash(npm install -g:*)",
      "Bash(pip install:*)",
      "Bash(rm -rf ../*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Bash(sudo:*)",
      "Bash(yay:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date)] $USER: $(jq -r '[.tool_input.command, .tool_input.description // \"No description\"] | join(\" - \")')\" >> ~/.claude/command_history.log"
          }
        ]
      }
    ],
    "Notification": [],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/notify-stop.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y @owloops/claude-powerline@latest --style=powerline --theme=dark",
    "padding": 0
  },
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true
  }
}
